---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact | Lake Forest Websites" bodyClass="page-contact">
  <link rel="stylesheet" href="/css/pages/contact.css" />

  <!-- Hero -->
  <header class="relative pt-40 pb-16 px-6 text-center">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] glow-bg pointer-events-none opacity-40"></div>
    <div class="max-w-5xl mx-auto relative">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs font-medium text-orange-400 mb-6">
        <span class="w-2 h-2 rounded-full bg-orange-500 animate-pulse"></span>
        Contact
      </div>
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">
        Talk to Our <span class="text-gradient-orange">Team</span>
      </h1>
      <p class="text-zinc-400 text-lg leading-relaxed">
        Have a question or want to discuss a project? Send a note and a local team member will respond promptly during business hours.
      </p>
    </div>
  </header>

  <main class="pb-24 px-6">
    <section class="max-w-7xl mx-auto grid md:grid-cols-3 gap-6 mb-12">
      <div class="framer-card p-8 rounded-2xl">
        <h3 class="text-xl font-semibold mb-2">Call Us</h3>
        <p class="text-zinc-400">Mon–Fri, 8am–5pm</p>
        <a href="tel:(555) 555-1234" class="mt-3 inline-block text-white font-semibold hover:text-zinc-300">(555) 555-1234</a>
      </div>
      <div class="framer-card p-8 rounded-2xl">
        <h3 class="text-xl font-semibold mb-2">Email</h3>
        <p class="text-zinc-400">We reply quickly during business hours.</p>
        <a href="mailto:info@example.com" class="mt-3 inline-block text-white font-semibold hover:text-zinc-300">info@example.com</a>
      </div>
      <div class="framer-card p-8 rounded-2xl">
        <h3 class="text-xl font-semibold mb-2">Location</h3>
        <p class="text-zinc-400 leading-relaxed">Lake Forest, CA</p>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="max-w-4xl mx-auto">
      <div class="framer-card p-8 rounded-2xl">
        <h2 class="text-2xl font-bold mb-6">How can we help you today?</h2>
        <form id="lfwContactForm" class="grid md:grid-cols-2 gap-4">
          <div class="col-span-2 md:col-span-1">
            <label class="block text-sm text-zinc-400 mb-1">Full Name*</label>
            <input name="name" required class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-3 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-orange-600" placeholder="Jane Doe" />
          </div>
          <div class="col-span-2 md:col-span-1">
            <label class="block text-sm text-zinc-400 mb-1">Email*</label>
            <input type="email" name="email" required class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-3 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-orange-600" placeholder="you@example.com" />
          </div>
          <div class="col-span-2 md:col-span-1">
            <label class="block text-sm text-zinc-400 mb-1">Phone</label>
            <input name="phone" class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-3 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-orange-600" placeholder="(555) 123-4567" />
          </div>
          <div class="col-span-2">
            <label class="block text-sm text-zinc-400 mb-1">Your Message</label>
            <textarea name="message" rows="5" class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-3 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-orange-600" placeholder="Tell us a bit about your project..."></textarea>
          </div>
          <div class="col-span-2 flex items-center gap-3">
            <button type="submit" class="px-8 py-3 bg-orange-600 text-white font-semibold rounded-full hover:bg-orange-500 transition-colors btn-glow">
              Send Message
            </button>
            <span id="lfwFormNote" class="text-sm text-zinc-500">No spam. We’ll reply during business hours.</span>
          </div>
        </form>
      </div>
    </section>

    <!-- Map -->
    <section class="max-w-7xl mx-auto mt-12">
      <div class="framer-card p-6 rounded-2xl">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold">Lake Forest, CA</h2>
          <a href="https://www.google.com/maps?q=Lake+Forest,+CA" target="_blank" rel="noreferrer" class="text-sm text-zinc-400 hover:text-white transition-colors">
            Open in Google Maps
          </a>
        </div>
        <div class="w-full h-80 md:h-96 rounded-xl overflow-hidden border border-white/10">
          <iframe
            title="Map of Lake Forest, CA"
            class="w-full h-full"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=Lake%20Forest,%20CA&z=12&output=embed">
          </iframe>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Simple mailto submit (no backend)
    (function () {
      const form = document.getElementById('lfwContactForm');
      if (!form) return;
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const fd = new FormData(form);
        const name = encodeURIComponent(fd.get('name') || '');
        const email = encodeURIComponent(fd.get('email') || '');
        const phone = encodeURIComponent(fd.get('phone') || '');
        const msg = encodeURIComponent(fd.get('message') || '');
        const subject = encodeURIComponent('New inquiry from website');
        const body = encodeURIComponent(
          `Name: ${decodeURIComponent(name)}\nEmail: ${decodeURIComponent(email)}\nPhone: ${decodeURIComponent(phone)}\n\nMessage:\n${decodeURIComponent(msg)}`
        );
        window.location.href = `mailto:info@example.com?subject=${subject}&body=${body}`;
      });
    })();
  </script>
</MainLayout>


