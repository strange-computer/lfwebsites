---
interface Props {
  title?: string;
  bodyClass?: string;
}
import '../styles/global.css';
const { title = 'Lake Forest Websites', bodyClass = '' } = Astro.props;
// Highlight active nav link based on current path
const currentPath = Astro.url.pathname.replace(/\/+$/, '') || '/';
const navClass = (href: string) =>
  `hover:text-white transition-colors ${currentPath === href || (href !== '/' && currentPath.startsWith(href)) ? 'text-white' : ''}`;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <!-- Existing layered CSS -->
    <link rel="stylesheet" href="/css/layers.css" />
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/components.css" />
  </head>
  <body class={`antialiased overflow-x-hidden selection:bg-orange-500 selection:text-white ${bodyClass}`}>
    <nav class="fixed inset-x-0 top-0 z-50 border-b border-white/10 bg-black/30 backdrop-blur-xl backdrop-saturate-150 shadow-[0_8px_32px_rgba(0,0,0,0.35)] ring-1 ring-white/10">
      <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center font-bold text-white">
            LF
          </div>
          <a href="/" class="font-semibold text-lg tracking-tight hover:text-white/80 transition">Lake Forest Websites</a>
        </div>
        <div class="hidden md:flex items-center gap-8 text-sm font-medium text-zinc-400">
          <a href="/services" class={navClass('/services')}>Services</a>
          <a href="/industries" class={navClass('/industries')}>Industries</a>
          <a href="/portfolio" class={navClass('/portfolio')}>Portfolio</a>
          <a href="/support" class={navClass('/support')}>Support</a>
          <a href="/hosting" class={navClass('/hosting')}>Hosting</a>
          <a href="/reviews" class={navClass('/reviews')}>Reviews</a>
          <a href="/about" class={navClass('/about')}>About</a>
          <a href="/contact" class={navClass('/contact')}>Contact</a>
        </div>
        <a href="#" class="hidden md:block px-5 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-zinc-200 transition-colors">
          (555) 555-1234
        </a>
      </div>
    </nav>

    <slot />

    <footer class="border-t border-white/10 py-12 px-6 bg-black">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="text-zinc-500 text-sm">Â© 2025 Lake Forest Websites. All Rights Reserved.</div>
        <div class="flex gap-6 text-sm text-zinc-400">
          <a href="/" class="hover:text-white">Home</a>
          <a href="/services" class="hover:text-white">Services</a>
          <a href="/about" class="hover:text-white">About</a>
        </div>
      </div>
    </footer>
  </body>
  <!-- Per-page CSS layers can be added by the page (e.g., /css/pages/home.css) -->
</html>


