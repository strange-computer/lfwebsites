---
interface Props {
  title?: string;
  bodyClass?: string;
}
import '../styles/global.css';
const { title = 'Lake Forest Websites', bodyClass = '' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <!-- Existing layered CSS -->
    <link rel="stylesheet" href="/css/layers.css" />
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/components.css" />
  </head>
  <body class={`antialiased overflow-x-hidden selection:bg-orange-500 selection:text-white ${bodyClass}`}>
    <nav class="fixed w-full z-50 top-0 border-b border-white/5 bg-black/50 backdrop-blur-xl">
      <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center font-bold text-white">
            LF
          </div>
          <a href="/" class="font-semibold text-lg tracking-tight hover:text-white/80 transition">Lake Forest Websites</a>
        </div>
        <div class="hidden md:flex items-center gap-8 text-sm font-medium text-zinc-400">
          <a href="/services" class="hover:text-white transition-colors">Services</a>
          <a href="/industries" class="hover:text-white transition-colors">Industries</a>
          <a href="/portfolio" class="hover:text-white transition-colors">Portfolio</a>
          <a href="/support" class="hover:text-white transition-colors">Support</a>
          <a href="/hosting" class="hover:text-white transition-colors">Hosting</a>
          <a href="/reviews" class="hover:text-white transition-colors">Reviews</a>
          <a href="/about" class="hover:text-white transition-colors">About</a>
          <a href="/contact" class="hover:text-white transition-colors">Contact</a>
        </div>
        <a href="#" class="hidden md:block px-5 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-zinc-200 transition-colors">
          (555) 555-1234
        </a>
      </div>
    </nav>

    <slot />

    <footer class="border-t border-white/10 py-12 px-6 bg-black">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="text-zinc-500 text-sm">Â© 2025 Lake Forest Websites. All Rights Reserved.</div>
        <div class="flex gap-6 text-sm text-zinc-400">
          <a href="/" class="hover:text-white">Home</a>
          <a href="/services" class="hover:text-white">Services</a>
          <a href="/about" class="hover:text-white">About</a>
        </div>
      </div>
    </footer>
  </body>
  <!-- Per-page CSS layers can be added by the page (e.g., /css/pages/home.css) -->
</html>


